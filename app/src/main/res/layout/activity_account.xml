<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="Account" />
    <RelativeLayout
        android:id="@+id/RelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:padding="10dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/channel_logo"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/profile_user_64572"
            app:civ_border_width="0.5dp"
            app:civ_border_color="@color/white"/>
        <TextView
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textSize="20sp"
            android:layout_toEndOf="@+id/channel_logo"
            android:textColor="@color/black"
            android:layout_marginStart="10dp"
            android:fontFamily=""/>
        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="@color/colorSecondaryText"
            android:layout_below="@+id/user_name"
            android:layout_toEndOf="@+id/channel_logo"
            android:layout_marginStart="10dp"
            android:textSize="14sp"/>
    </RelativeLayout>
        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:backgroundTint="@color/black"
            android:layout_below="@+id/RelativeLayout"
            android:layout_marginTop="10dp"/>
    <LinearLayout
        android:id="@+id/Center"
        android:theme="@style/Widget.Design.BottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view1"
        android:padding="8dp"
        android:orientation="vertical"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/txt_channel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Channel"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:padding="16dp"
            android:drawablePadding="20dp"
            android:backgroundTint="#202020"
            android:drawableStart="@drawable/channel"
            />
        <TextView
            android:id="@+id/profile_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile Setting"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:padding="16dp"
            android:drawablePadding="20dp"
            android:backgroundTint="#202020"
            android:drawableStart="@drawable/setting"
            />
        <TextView
            android:id="@+id/help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Help &amp; Feedback"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:padding="16dp"
            android:drawablePadding="20dp"
            android:backgroundTint="#202020"
            android:drawableStart="@drawable/help"
            />
    </LinearLayout>
</RelativeLayout>