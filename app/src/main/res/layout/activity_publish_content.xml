<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PublishContentActivity">
    <RelativeLayout
        android:id="@+id/Video_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtUpload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload"
            android:padding="5dp"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:fontFamily="@font/befold"
            android:background="@drawable/button_bg"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15sp"
            android:layout_marginTop="11dp"
            android:minWidth="77dp"
            android:gravity="center"
            android:adjustViewBounds="true"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/channel_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/profile_user_64572"
            android:layout_marginTop="11dp"
            android:layout_marginStart="15dp"/>
        <VideoView
            android:id="@+id/video_view"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/channel_logo"
            android:layout_margin="5dp"
            android:padding="5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/video_view"
            android:padding="5dp">

            <EditText
                android:id="@+id/input_video_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="TITLE"
                android:layout_marginTop="5dp"
                android:textStyle="normal"
                android:background="@drawable/editext_bg"
                android:textSize="15sp"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/input_video_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Description"
                android:linksClickable="true"
                android:textColorLink="#0A99DA"
                android:minHeight="150dp"
                android:gravity="start"
                android:background="@drawable/editext_bg"
                android:layout_marginTop="5dp"
                android:textStyle="normal"
                android:textSize="15sp"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/black"
                android:autoLink="email|web|phone"/>

            <EditText
                android:id="@+id/input_video_tag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="tag"
                android:background="@drawable/editext_bg"
                android:layout_marginTop="5dp"
                android:textStyle="normal"
                android:textSize="15sp"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/black"
                android:autoLink="email|web|phone"/>
            <TextView
                android:id="@+id/chose_playlist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choose Playlist"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:textColorLink="#FF0000"/>
            
            <LinearLayout
                android:id="@+id/progressLyt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="vertical"
                android:visibility="gone">
                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    style="?android:attr/progressBarStyle"
                    android:padding="5dp"
                    android:backgroundTint="@color/black"
                    android:indeterminate="false"
                    android:background="@drawable/editext_bg"
                    android:indeterminateOnly="false"
                    android:layout_marginTop="5dp"
                    android:progressDrawable="@drawable/uplode_progress_style" />
                <TextView
                    android:id="@+id/progress_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="Progress Text"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:fontFamily="@font/befold"
                    android:layout_marginTop="5dp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>